<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/face_bg"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/quit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/back_row"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/quit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:text="人脸识别系统"/>

        <ImageView
            android:id="@+id/btn_face_operation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/face_setup"
            android:layout_alignParentRight="true"
            android:clickable="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="380dp"
        android:layout_height="445dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bording_bg"
        android:padding="10dp"
        android:layout_marginTop="200dp">
        <com.shuli.root.faceproject.camera.CameraPreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <com.shuli.root.faceproject.face.FaceView
            android:id="@+id/fcview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/scanVerticalLineImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/line_blue2" />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_below="@+id/frame"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="验证成功！"/>
    <LinearLayout
        android:id="@+id/ll_face_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info"
        android:padding="30dp"
        android:visibility="gone"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/xingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="姓名："/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gonghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工号："
                    android:textSize="30sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:animateLayoutChanges="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/face_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />
    </LinearLayout>
</RelativeLayout>
