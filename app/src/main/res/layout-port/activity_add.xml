<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/login_bg"
   >
    <ImageView
        android:id="@+id/quit"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/face_setup"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="445dp"
            android:padding="10dp"
            android:background="@drawable/bording_bg">
            <SurfaceView
                android:id="@+id/camera_sf"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/takePhoto"
            android:layout_below="@+id/camera_sf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="24px"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll"
        android:padding="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/setup_linearlayout"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/name_pic"/>
            <com.shuli.root.faceproject.utils.ClearEditTextWhite
                android:id="@+id/ce_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="姓名"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="@dimen/setup_linearlayout"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gonghao"/>
            <com.shuli.root.faceproject.utils.ClearEditTextWhite
                android:id="@+id/ce_gong_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入工号"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/faceTokenEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:textSize="24px"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/deleteFace"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                style="@style/blueButtonStyle"
                android:textSize="26sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="删除人脸标识"/>
            <TextView
                android:id="@+id/bindFace"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                style="@style/blue1ButtonStyle"
                android:textSize="26sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="绑       定"/>
        </LinearLayout>
        <TextView
            android:id="@+id/toActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:text="跳转 人脸识别--->"/>

    </LinearLayout>
    <TextView
        android:id="@+id/toQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="信息查询"/>
</RelativeLayout>