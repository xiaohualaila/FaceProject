<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/add_face_bkg"
   >
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/back_row"/>
<LinearLayout
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="35dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <SurfaceView
        android:id="@+id/camera_sf"
        android:layout_width="512dp"
        android:layout_height="384dp"
        />
    <ImageView
        android:id="@+id/takePhoto"
        android:layout_below="@+id/camera_sf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textSize="24px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/photo" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/setup_linearlayout"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/name_pic"/>
            <com.shuli.root.faceproject.utils.ClearEditTextWhite
                android:id="@+id/ce_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="姓名"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="@dimen/setup_linearlayout"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gonghao"/>
            <com.shuli.root.faceproject.utils.ClearEditTextWhite
                android:id="@+id/ce_gong_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入工号"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/faceTokenEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:textSize="24px"
            android:textColor="@color/white" />
